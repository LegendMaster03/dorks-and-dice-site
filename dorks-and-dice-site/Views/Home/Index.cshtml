@{
    ViewData["Title"] = "Home";
    var discordInviteUrl = ViewData["DiscordInviteUrl"] as string;
    var discordWidgetUrl = ViewData["DiscordWidgetUrl"] as string;
}

<section class="p-4 p-md-5 mb-4 rounded-3 border bg-light-subtle">
    <div class="container-fluid py-3 px-0">
        <div class="row align-items-center g-4">
            <div class="col-md-3 col-lg-2 text-center text-md-start">
                <img src="~/images/profile/kyle-headshot.jpg"
                     class="profile-headshot img-fluid rounded-circle border"
                     alt="Headshot of Kyle Barnett" />
            </div>
            <div class="col-md-9 col-lg-10">
                <h1 class="display-5 fw-bold">Dorks & Dice</h1>
                <p class="fs-5 mb-4">
                    Kyle W. Barnett - Information Science senior at the University of North Florida, technology builder,
                    and organizer behind Dorks & Dice. This site is the full web profile version of the one-page resume.
                </p>
                <div class="d-flex gap-2 flex-wrap">
                    <a class="btn btn-primary btn-lg" asp-controller="Home" asp-action="Projects">View Projects</a>
                    <a class="btn btn-outline-secondary btn-lg" asp-controller="Home" asp-action="Resume">Resume</a>
                    <a class="btn btn-outline-secondary btn-lg" asp-controller="Home" asp-action="Contact">Contact</a>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="row g-4">
    <div class="col-md-6">
        <h2 class="h4">Professional Summary</h2>
        <p>
            Experience spans full stack development, technical support, cybersecurity team operations,
            and game development collaboration. Current emphasis is on building reliable systems,
            practical tooling, and strong team execution.
        </p>
        <p class="mb-0">
            Core domains: software development, system support, networking, automation, and team leadership.
        </p>
    </div>
    <div class="col-md-6">
        <h2 class="h4">Current Snapshot</h2>
        <ul>
            <li>UNF Cyber Security Team member (2024-present)</li>
            <li>Dean's List recipient and Upsilon Pi Epsilon member</li>
            <li>Hands-on experience across Windows, macOS, Linux, and networking</li>
            <li>Community leadership through tabletop game mastering and Eagle Scout service history</li>
        </ul>
    </div>
</section>

<section class="mt-4">
    <div class="card">
        <div class="card-body">
            <h2 class="h4">Explore Full Details</h2>
            <p class="mb-3">
                Full education timeline, technical skills, work history, and extracurricular leadership are available
                on the Resume page, plus the downloadable PDF.
            </p>
            <a class="btn btn-primary" asp-controller="Home" asp-action="Resume">Open Full Profile</a>
        </div>
    </div>
</section>

<section class="mt-4">
    <div class="card discord-card">
        <div class="card-body">
            <h2 class="h4 mb-2">Discord Integration</h2>
            <p class="mb-3">
                Join the Dorks & Dice community on Discord for campaign updates, community chat, and project announcements.
            </p>
            @if (!string.IsNullOrWhiteSpace(discordInviteUrl))
            {
                <a class="btn btn-primary mb-3" href="@discordInviteUrl" target="_blank" rel="noopener noreferrer">Join on Discord</a>
            }
            else
            {
                <div class="alert alert-warning mb-3" role="alert">
                    Discord invite link is not configured yet.
                </div>
            }

            @if (!string.IsNullOrWhiteSpace(discordWidgetUrl))
            {
                <div class="ratio ratio-16x9 discord-widget">
                    <iframe title="Discord Server Widget"
                            src="@discordWidgetUrl"
                            allowtransparency="true"
                            frameborder="0"
                            sandbox="allow-popups allow-popups-to-escape-sandbox allow-same-origin allow-scripts"></iframe>
                </div>
            }
            else
            {
                <p class="text-muted mb-0">
                    Set <code>Discord:WidgetUrl</code> to embed your live server widget.
                </p>
            }
        </div>
    </div>
</section>
