@{
    ViewData["Title"] = "Home";
    var discordWidgetUrl = ViewData["DiscordWidgetUrl"] as string;
}

<section class="p-4 p-md-5 mb-4 rounded-3 border bg-light-subtle">
    <div class="container-fluid py-3 px-0">
        <div class="row align-items-start g-4">
            <div class="col-lg-8">
                <div class="d-flex align-items-center gap-3 flex-wrap mb-3">
                    <img src="~/images/profile/kyle-headshot.jpg"
                         class="profile-headshot img-fluid rounded-circle border"
                         alt="Headshot of Kyle Barnett" />
                    <div>
                        <h1 class="display-5 fw-bold mb-1">Dorks & Dice</h1>
                        <p class="mb-0 text-muted">Kyle W. Barnett</p>
                    </div>
                </div>
                <p class="fs-5 mb-4">
                    Dorks & Dice is a community for tabletop gaming, collaborative worldbuilding,
                    and practical tech-enabled campaign management.
                </p>
                <div class="d-flex gap-2 flex-wrap">
                    <a class="btn btn-primary btn-lg" asp-controller="Home" asp-action="Resume">Professional Resume</a>
                    <a class="btn btn-outline-secondary btn-lg" asp-controller="Home" asp-action="Resume" asp-fragment="projects">Project Portfolio</a>
                    <a class="btn btn-outline-secondary btn-lg" asp-controller="Home" asp-action="Resume" asp-fragment="contact">Contact</a>
                </div>
            </div>
            <div class="col-lg-4">
                <aside class="discord-panel p-3 rounded-3 border">
                    @if (!string.IsNullOrWhiteSpace(discordWidgetUrl))
                    {
                        <div class="discord-widget-wrapper">
                            <iframe title="Discord Server Widget"
                                    src="@discordWidgetUrl"
                                    width="350"
                                    height="500"
                                    allowtransparency="true"
                                    frameborder="0"
                                    sandbox="allow-popups allow-popups-to-escape-sandbox allow-same-origin allow-scripts"></iframe>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning mb-0" role="alert">Discord widget URL is not configured.</div>
                    }
                </aside>
            </div>
        </div>
    </div>
</section>

<section class="row g-4">
    <div class="col-md-6">
        <h2 class="h4">About Dorks & Dice</h2>
        <p>
            Dorks & Dice is built around long-form campaigns, consistent session operations,
            and collaborative storytelling. The goal is to make every game night organized, welcoming, and fun.
        </p>
        <p class="mb-0">
            The group uses structured planning, digital tools, and play-tested systems to keep campaigns moving.
        </p>
    </div>
    <div class="col-md-6">
        <h2 class="h4">What You Will Find Here</h2>
        <ul>
            <li>Discord-connected community coordination</li>
            <li>Campaign framework and session operations</li>
            <li>D&amp;D tooling and process design</li>
            <li>A direct path to Kyle Barnett's professional resume and project portfolio</li>
        </ul>
    </div>
</section>

<section class="mt-4">
    <div class="card">
        <div class="card-body">
            <h2 class="h4">Professional Profile</h2>
            <p class="mb-3">
                Applying for jobs or internships? Use the Resume page as the direct professional view,
                including detailed experience, linked project pages, and downloadable PDF.
            </p>
            <a class="btn btn-primary" href="/resume">Open Resume</a>
        </div>
    </div>
</section>
