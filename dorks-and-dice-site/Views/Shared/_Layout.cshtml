@{
    var action = ViewContext.RouteData.Values["action"]?.ToString() ?? string.Empty;
    var isResumeContext = action == "Resume"
        || action.StartsWith("Experience", StringComparison.Ordinal)
        || action is "XnGine" or "SeniorProject" or "CyberSecurityTeam" or "Skyblivion" or "Skywind" or "TechnologyServices" or "SimLabExpo" or "WiredWorks" or "DndTools";
    var siteSuffix = isResumeContext ? "Kyle Barnett" : "Dorks & Dice";
    var brandText = isResumeContext ? "Kyle Barnett" : "Dorks & Dice";
    var footerText = isResumeContext ? "Kyle Barnett" : "Dorks & Dice";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @siteSuffix</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/dorks_and_dice_site.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-semibold" asp-area="" asp-controller="Home" asp-action="Index">@brandText</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#siteNavbar" aria-controls="siteNavbar"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="siteNavbar">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Resume">Resume</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Resume" asp-fragment="contact">Contact</a>
                        </li>
                    </ul>
                    <button id="themeToggle" class="btn btn-outline-secondary btn-sm ms-lg-3 mt-2 mt-lg-0" type="button" aria-label="Toggle dark mode">
                        Dark Mode
                    </button>
                </div>
            </div>
        </nav>
    </header>
    <div class="container py-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted py-3 mt-4">
        <div class="container">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-2">
                <span>&copy; @DateTime.UtcNow.Year @footerText</span>
                <span>
                    <a asp-area="" asp-controller="Home" asp-action="Resume">Resume</a>
                    | 
                    <a asp-area="" asp-controller="Home" asp-action="Resume" asp-fragment="contact">Contact</a>
                </span>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
